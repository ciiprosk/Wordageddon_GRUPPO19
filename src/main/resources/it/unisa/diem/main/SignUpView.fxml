<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="10.0" style="-fx-padding: 40;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.main.controller.SignUpViewController">
   <children>
   
       <Label text="Registrazione">
           <font>
            <Font size="40.0" />
         </font>
           <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
       </Label>
   
       <TextField fx:id="registerEmailField" maxHeight="60.0" maxWidth="1200.0" prefHeight="60.0" prefWidth="1200.0" promptText="e-mail">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font size="25.0" />
         </font></TextField>
       <TextField fx:id="registerUsernameField" maxHeight="60.0" maxWidth="1200.0" prefHeight="60.0" prefWidth="1200.0" promptText="username">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font size="25.0" />
         </font></TextField>
       <PasswordField fx:id="registerPasswordField" maxHeight="60.0" maxWidth="1200.0" prefHeight="60.0" prefWidth="1200.0" promptText="password">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font size="25.0" />
         </font></PasswordField>
   
       <Label fx:id="passwordTooShortLabel" prefHeight="30.0" prefWidth="1200.0" style="-fx-text-fill: red" text="La password deve contenere almeno 8 caratteri" visible="false">
         <font>
            <Font size="20.0" />
         </font></Label>
       <PasswordField fx:id="registerConfirmField" maxHeight="60.0" maxWidth="1200.0" prefHeight="60.0" prefWidth="1200.0" promptText="conferma password">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font size="25.0" />
         </font></PasswordField>
       <Label fx:id="passwordMismatchLabel" prefHeight="30.0" prefWidth="1200.0" style="-fx-text-fill: red" text="Le password non corrispondono" visible="false">
         <font>
            <Font size="20.0" />
         </font></Label>
   
       <HBox alignment="CENTER">
           <children>
               <Label text="Hai giÃ  un account? ">
               <font>
                  <Font size="30.0" />
               </font></Label>
               <Label fx:id="goToLoginLabel" onMouseClicked="#goToLogin" style="-fx-text-fill: rgb(0, 155, 255)" text="Accedi" underline="true">
               <font>
                  <Font size="28.0" />
               </font></Label>
           </children>
       </HBox>
   
       <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="60.0" prefWidth="180.0" text="Registrati">
         <font>
            <Font size="25.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin></Button>
   </children>
</VBox>
