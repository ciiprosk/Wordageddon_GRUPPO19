<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox fx:controller="it.unisa.diem.main.controller.SignUpViewController" alignment="TOP_CENTER" spacing="10.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="400.0" prefWidth="600.0"  style="-fx-padding: 40;" stylesheets="@style.css">

    <Label text="Registrazione">
        <font><Font size="20.0" /></font>
        <VBox.margin><Insets top="50.0" bottom="5.0" /></VBox.margin>
    </Label>

    <TextField fx:id="registerEmailField" promptText="e-mail" />
    <TextField fx:id="registerUsernameField" promptText="username" />
    <PasswordField fx:id="registerPasswordField" promptText="password" />
    <PasswordField fx:id="registerConfirmField" promptText="conferma password" />

    <Label fx:id="passwordTooShortLabel" text="La password deve contenere almeno 8 caratteri"
           textFill="red" visible="false" style="-fx-text-fill: red"/>
    <Label fx:id="passwordMismatchLabel" text="Le password non corrispondono"
           textFill="red" visible="false" style="-fx-text-fill: red" />

    <HBox alignment="CENTER">
        <children>
            <Label text="Hai giÃ  un account? " />
            <Label fx:id="goToLoginLabel" text="Accedi" textFill="#004aff" underline="true"
                   onMouseClicked="#goToLogin" />
        </children>
    </HBox>

    <Button fx:id="registerButton" text="Registrati" onAction="#handleRegister" />
</VBox>
