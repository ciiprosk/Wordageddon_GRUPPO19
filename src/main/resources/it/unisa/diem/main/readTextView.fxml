<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="800.0" prefHeight="800.0" prefWidth="1200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.main.controller.ReadTextViewController">
   <children>
      <VBox alignment="CENTER" layoutX="7.0" maxHeight="800.0" prefHeight="800.0" prefWidth="1200.0" spacing="10.0">
         <children>
            <Label fx:id="textTitleLabel" text="Titolo">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <ScrollPane prefHeight="500.0" prefWidth="1100.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="1080.0">
                     <children>
                        <Label fx:id="textBodyLabel" alignment="TOP_LEFT" layoutX="14.0" layoutY="14.0" text="Text" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <Label fx:id="timerTextLabel" text="00.00">
               <font>
                  <Font size="50.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="1100.0">
               <children>
                  <Button fx:id="continueButton" mnemonicParsing="false" onAction="#handleContinue" prefHeight="60.0" prefWidth="130.0" text="CONTINUE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="50.0" right="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
