<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.main.controller.LoginViewController">
    <children>
        <VBox fx:id="loginPane" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
            <children>
                <Label text="Accedi">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="100.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="loginUsernameField" promptText="username">
                    <VBox.margin>
                        <Insets bottom="5.0" left="50.0" right="50.0" top="5.0" />
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="loginPasswordField" promptText="password">
                    <VBox.margin>
                        <Insets bottom="5.0" left="50.0" right="50.0" top="5.0" />
                    </VBox.margin>
                </PasswordField>
                <HBox alignment="CENTER" prefHeight="4.0" prefWidth="600.0">
                    <children>
                        <Label text="Non hai un account? ">
                            <HBox.margin>
                                <Insets bottom="5.0" top="5.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="goToRegisterLabel" onMouseClicked="#showRegister" text="Registrati" textFill="#004aff" underline="true" />
                    </children>
                </HBox>
                <Button fx:id="loginButton" onAction="#handleLogin" text="Accedi">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
